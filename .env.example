# Demo Mode Configuration
# Set to 'true' to disable authentication for public demo
NEXT_PUBLIC_DEMO_MODE=true

# Clerk Authentication (can be left empty when DEMO_MODE=true)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Google Sheets API Configuration
GOOGLE_SHEETS_API_KEY=your_google_api_key_here
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Company/Brand Configuration
NEXT_PUBLIC_COMPANY_NAME=MyRoomie
NEXT_PUBLIC_COMPANY_DOMAIN=myroomie.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@myroomie.com

# Product Names (optional - will use company name if not set)
NEXT_PUBLIC_PRODUCT_CONNECT=MyRoomie Connect
NEXT_PUBLIC_PRODUCT_SPACES=MyRoomie Spaces  
NEXT_PUBLIC_PRODUCT_ENTERPRISE=MyRoomie Enterprise

# Platform Meta Tags
NEXT_PUBLIC_PLATFORM_TITLE=MyRoomie - Premium Investor Pitch Deck
NEXT_PUBLIC_PLATFORM_DESCRIPTION=Europe's Integrated Living Platform - Investment Presentation
NEXT_PUBLIC_ADMIN_DESCRIPTION=Manage content across all pages of the MyRoomie investor platform

# Admin Configuration (comma-separated list)
ADMIN_EMAILS=admin@company.com,contact@company.com

# Development/Debug Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false

